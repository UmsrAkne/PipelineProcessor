<Window
    x:Class="PipelineProcessor.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:PipelineProcessor.Models"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:PipelineProcessor.ViewModels"
    Title="{Binding Title}"
    Width="525"
    Height="350"
    d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="ListBoxCustomStyle" TargetType="ListBox">
            <Setter Property="Margin" Value="2" />
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="4" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />

                        <!-- ControlTemplate 本体 -->
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border
                                        x:Name="Border"
                                        Padding="{TemplateBinding Padding}"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="3">
                                        <ContentPresenter />
                                    </Border>

                                    <!-- 状態変化トリガー -->
                                    <ControlTemplate.Triggers>

                                        <!-- マウスオーバー -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#FFE5F1FF" />
                                            <!-- 薄い青 -->
                                        </Trigger>

                                        <!-- 選択時 -->
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#FFCCE4FF" />
                                            <!-- 濃いめ青 -->
                                            <Setter Property="Foreground" Value="Black" />
                                        </Trigger>

                                        <!-- 非アクティブ（フォーカスなし選択） -->
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsSelected" Value="True" />
                                                <Condition Property="Selector.IsSelectionActive" Value="False" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="#FFC7C7C7" />
                                            <!-- グレー -->
                                        </MultiTrigger>

                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <!-- デフォルト背景（未選択） -->
                        <Setter Property="Background" Value="Transparent" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Padding="2">
            <StackPanel Orientation="Horizontal">
                <Button Content="実行" />
            </StackPanel>
        </Border>

        <ListBox
            Grid.Row="1"
            Grid.Column="0"
            ItemsSource="{Binding ProcessorUnits}"
            Style="{StaticResource ListBoxCustomStyle}">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:ProcessorUnit}">
                    <Border>
                        <TextBlock Text="{Binding ProcessType}" />
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox
            Grid.Row="2"
            Grid.Column="0"
            ItemsSource="{Binding TextFiles}"
            SelectedItem="{Binding SelectedItem}"
            Style="{StaticResource ListBoxCustomStyle}">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:TextFile}">
                    <Border>
                        <TextBlock Text="{Binding FileInfo.Name}" />
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Border
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Padding="2">
            <TextBlock Text="{Binding TextFileDetail}" />
        </Border>
    </Grid>
</Window>